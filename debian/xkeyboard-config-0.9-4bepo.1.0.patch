+// -*- indent-tabs-mode: nil -*-
+
+// Created by Frédéric Boiteux <fboiteux (at) free (dot) fr>
+
+xkb_geometry "tm2030USB" {
+    description = "Typematrix 2030 USB";
+
+    // Note : les touches spéciales (Calc, www, desktop...) sont nommées ici
+    // <I[XX]>, pour qu elles soient correctement affichées par l'applet Gnome.
+    // Les numéros XX sont inventés, en fait, elles ne renvoient pas
+    // de scancode (Fn, touches multimédia)
+    // ou plusieurs scancodes (comme la touche Desktop, Shuffle…).
+
+    // Taille globale du clavier :
+    width  = 320;
+    height = 130;
+    // couleurs de fond et de dessin :
+    baseColor  = "black";
+    labelColor = "black";
+
+    // formes qui seront reprises ensuite :
+    // touche de base : 20mm de coté
+    shape "NORM" { cornerRadius=1, { [18, 18]   }, { [1.5, 1.5], [16.5, 14] } };
+    shape "FUNC" { cornerRadius=1, { [18, 12]   }, { [2.5,   0], [15.5, 10] } };
+    shape "LFSH" { cornerRadius=1, { [18, 36.5] }, { [2.5,   0], [15.5, 30] } };
+    shape "ALT1" { cornerRadius=1, { [27.5, 18] }, { [2.5,   0], [23.5, 14] } };
+    shape "BKSP" { cornerRadius=1, { [18, 30.5] }, { [1.5, 1.5], [16.5, 29] } };
+    shape "RTSN" { cornerRadius=1, { [18, 37.5] }, { [1.5, 1.5], [16.5, 35] } };
+    shape "SPCE" { cornerRadius=1, { [92, 25]   }, { [1.5, 1.5], [90.5, 22] } };
+
+    // Rangée des touches de fonction
+    section "Function" {
+        left = 27;
+        top  = 1.5;
+        key.gap = 0.5;
+        key.color = "grey50";
+        key.shape = "FUNC";
+        row {
+            keys { <ESC>,  <FK01>, <FK02>, <FK03>, <FK04>, <FK05> };
+        };
+        row {
+            left = 129.5;
+            keys { <FK06>, <FK07>, <FK08>, <FK09>, <FK10>, <FK11>,
+                   <FK12>, <NMLK> };
+        };
+    };
+
+    // Partie alpha-numérique du clavier
+    section "Alpha" {
+        left = 27;
+        top  = 14;
+        key.gap = 0.5;
+        key.color = "grey10";
+        key.shape = "NORM";
+        row {
+            top  = 0;
+            keys { <TLDE>,             <AE01>, <AE02>, <AE03>, <AE04>, <AE05> };
+        };
+        row {
+            top  = 18.5;
+            keys { <TAB>,              <AD01>, <AD02>, <AD03>, <AD04>, <AD05> };
+        };
+        row {
+            top  = 37;
+            keys { { <LFSH>, "LFSH" }, <AC01>, <AC02>, <AC03>, <AC04>, <AC05> };
+        };
+        row {
+            top  = 55.5;
+            left = 18.5;
+            keys {                     <AB01>, <AB02>, <AB03>, <AB04>, <AB05> };
+        };
+
+        row {
+            top  = 0;
+            left = 129.5;
+            // I01 pour la touche Calc
+            keys { <AE06>, <AE07>, <AE08>, <AE09>, <AE10>, <AE11>, <AE12>, <I01> };
+        };
+        row {
+            top  = 18.5;
+            left = 129.5;
+            // I02 pour la touche Mail
+            keys { <AD06>, <AD07>, <AD08>, <AD09>, <AD10>, <AD11>, <AD12>, <I02> };
+        };
+        row {
+            top  = 37;
+            left = 129.5;
+            keys { <AC06>, <AC07>, <AC08>, <AC09>, <AC10>, <AC11>, { <RTSH>, "LFSH" }, <CAPS> };
+        };
+        row {
+            top  = 55.5;
+            left = 129.5;
+            keys { <AB06>, <AB07>, <AB08>, <AB09>, <AB10>, <AB11> };
+        };
+        row {
+            top  = 55.5;
+            left = 259;
+            // I03 pour la touche WWW
+            keys { <I03> };
+        };
+
+        row {
+            top  = 74;
+            left = 74;
+            keys { { <SPCE>, "SPCE" } };
+        };
+    };
+
+    // touches de contrôle
+    section "Control" {
+        left = 27;
+        top  = 0;
+        key.gap = 0.5;
+        key.color = "grey30";
+        key.shape = "NORM";
+        row {
+            top  = 88;
+            // I04 pour la touche Play, I05 pour la touche Shuffle
+            keys { <LCTL>, <I04>, <MENU>, <I05> };
+        };
+        row {
+            top = 106.5;
+            // I06 pour la touche Fn
+            keys { <I06>, { <LWIN>, "ALT1" }, { <LALT>, "ALT1" } };
+        };
+
+        row {
+            top  = 88;
+            left = 166.5;
+            // I07 pour la touche Desktop
+            keys { <I07>, <HOME>, <UP>, <END>, { <RCTL>, "LFSH"}, <PGUP> };
+        };
+        row {
+            top = 106.5;
+            left = 166.5;
+            keys { <RALT>, <LEFT>, <DOWN>, <RGHT> };
+        };
+        row {
+            top = 106.5;
+            left = 259;
+            keys { <PGDN> };
+        };
+
+        row {
+            top  = 1;
+            left = 111.5;
+            vertical = true;
+            keys { <DELE>, { <BKSP>, "BKSP" }, { <RTRN>, "LFSH" } };
+        };
+    };
+
+    // autres décors
+    shape "FORME1" { cornerRadius=1, { [27, 126.5] } };
+    solid "panneau1" {
+        shape = "FORME1";
+        left  = 0;
+        top   = 0;
+        color = "grey40";
+    };
+
+    shape "FORME2" { cornerRadius=1, { [92, 13] } };
+    solid "panneau2" {
+        shape = "FORME2";
+        left = 101.5;
+        top = 113.5;
+        color = "grey40";
+    };
+
+    shape "LED"  { cornerRadius = 2, { [4, 4] } };
+
+    indicator.onColor  = "green";
+    indicator.offColor = "grey10";
+    indicator.left     = 10;
+    indicator.shape    = "LED";
+
+    indicator "Num Lock"     { top = 11; };
+    indicator "Caps Lock"    { top = 27.5; };
+    indicator "Scroll Lock"  { top = 44; };
+    indicator "Power"	     { top = 60.5; };
+};
